{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "automation/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "automation/run_linters.sh && automation/run_unittests.sh",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "presentation": {
                "reveal": "always"
            },
            "dependsOn": "build"
        }
    ]
}